<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="flintstones.resolutionphase.ui">
      <ui
            id="flintstones.resolutionphase.analysis.ui"
            name="%resolutionphase.analysis"
            resolution_phase="flintstones.resolutionphase.analysis">
         <perspective
               id="flintstones.resolutionphase.analysis.perspective">
         </perspective>
      </ui>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="sinbad2.resolutionphase.analysis.ui.AnalysisPerspective"
            icon="icons/sensitivityanalysis.png"
            id="flintstones.resolutionphase.analysis.perspective"
            name="%perspective.analysis">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="flintstones.resolutionphase.analysis.perspective">
         <view
               closeable="false"
               id="flintstones.element.ui.view.criteria"
               minimized="false"
               moveable="false"
               ratio="0.3"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="flintstones.element.ui.view.alternatives"
               minimized="false"
               moveable="false"
               ratio="0.33"
               relationship="bottom"
               relative="flintstones.element.ui.view.criteria"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="flintstones.element.ui.view.campaigns"
               minimized="false"
               moveable="false"
               ratio="0.45"
               relationship="bottom"
               relative="flintstones.element.ui.view.alternatives"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="flintstones.element.ui.view.mecs"
               minimized="false"
               moveable="false"
               ratio="0.7"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
